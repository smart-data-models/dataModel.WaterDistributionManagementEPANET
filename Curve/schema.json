{
  "$schema": "http://json-schema.org/schema#",
  "schemaVersion": "0.0",
  "$id": "https://smart-data-models.github.io/dataModel.WaterDistributionManagementEPANET/Curve/schema.json",
  "title": "WaterNetwork - Curve",
